# IFP Edge Configuration
# Copy this file to .env and configure your settings

# ===========================================================================
# Grafana Dashboard
# ===========================================================================
GRAFANA_PASSWORD=admin

# ===========================================================================
# SAGE Monitoring Agent
# ===========================================================================
SAGE_CHECK_INTERVAL=30  # Check every 30 seconds
LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR

# ===========================================================================
# Web3 Wallet Monitoring (Optional)
# ===========================================================================
# Set your wallet address to monitor blockchain token balance
WALLET_ADDRESS=

# Polygon RPC endpoint (public or your own node)
POLYGON_RPC_URL=https://polygon-rpc.com

# O2 Token Contract Address (default: IFP O2 token)
O2_TOKEN_ADDRESS=0xEfc21AceC2D99a8F4951125d67d9Cd129FB55DcE

# ===========================================================================
# Advanced Settings (Optional)
# ===========================================================================
# Prometheus retention period
PROMETHEUS_RETENTION=7d

# TTE (Time-To-Empty) alert threshold for wallets (minutes)
TTE_ALERT_MINUTES=30
